<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tasks</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white max-w-xl mx-auto">
      <form action="/create" method="post" class="space-y-3">
        <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700 placeholder-gray-300" type="text" placeholder="Title goes here.." name="title" required>
        <textarea class="block w-full rounded-md outline-none px-5 py-2 resize-none bg-zinc-700 placeholder-gray-300" placeholder="Write your task details here..." name="details" rows="5" required></textarea>
        <input class="bg-blue-600 hover:bg-blue-700 transition px-5 py-2 rounded-md cursor-pointer w-full" type="submit" value="Create Task">
      </form>
    </div>

    <div class="tasks flex gap-4 flex-wrap p-10 justify-center">
      <% if(files.length > 0){ %>
        <% files.forEach(function(val){ %>
          <div class="task min-w-72 max-w-xs px-5 py-4 rounded-lg bg-zinc-800 shadow-md">
            <h1 class="text-white text-xl font-semibold tracking-tight truncate"><%= val %></h1>
            <div class="flex w-full justify-between items-center mt-3">
              <a class="text-blue-400 hover:text-blue-300 inline-block" href="/file/<%= val %>">Read More</a>
              <a class="text-yellow-400 hover:text-yellow-300 inline-block" href="/edit/<%= val %>">Edit Filename</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-400 text-lg">No tasks yet.</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
